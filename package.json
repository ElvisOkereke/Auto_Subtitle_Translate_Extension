{
  "name": "auto-subtitle-translator",
  "version": "1.0.0",
  "description": "Browser extension for auto-generating and translating subtitles",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/ --ext .ts",
    "type-check": "tsc --noEmit",
    "package": "npm run build:prod && web-ext build --source-dir=dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "web-ext": "^7.6.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "browser-extension",
    "subtitles",
    "translation",
    "speech-recognition",
    "accessibility"
  ],
  "author": "Your Name",
  "license": "MIT"
}
